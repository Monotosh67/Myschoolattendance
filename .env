# ============ FLASK CONFIGURATION ============
# Secret key for session encryption (REQUIRED)
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production

# Flask environment
FLASK_DEBUG=False
FLASK_ENV=production

# Server configuration
PORT=5000
HOST=0.0.0.0

# Database configuration
DATABASE_URL=sqlite:///instance/dewra_school.db

# ============ SMS GATEWAY CONFIGURATION ============
# SMSGate API Credentials (Required for SMS functionality)
# Get credentials from: https://sms-gate.app
SMSGATE_BASE_URL=https://api.sms-gate.app
SMSGATE_USERNAME=I4XVFP
SMSGATE_PASSWORD=d4jti6zrrhzef3

# Alternative SMS Configuration (if not using SMSGate)
# Uncomment and configure if using alternative SMS service
# SMS_API_KEY=your-sms-api-key
# SMS_DEVICE_ID=your-device-id
# SMS_SIGNING_SECRET=your-signing-secret

# ============ DATABASE BACKUP CONFIGURATION ============
# Automatic backup settings
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOUR=2  # 2 AM daily backup

# ============ EMAIL CONFIGURATION (Optional) ============
# For password reset and notifications
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password
# MAIL_DEFAULT_SENDER=noreply@dewra.edu.bd

# ============ UPLOAD CONFIGURATION ============
# File upload settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,svg

# ============ SECURITY CONFIGURATION ============
# Session security (Set to True in production)
SESSION_COOKIE_SECURE=False  # Set to True if using HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Password reset token expiration (in seconds)
PASSWORD_RESET_EXPIRATION=3600  # 1 hour

# ============ SCHOOL INFORMATION ============
# Default school settings (can be changed in admin panel)
SCHOOL_NAME=Dewra High School
SCHOOL_ADDRESS=ভাংগা, ফরিদপুর
SCHOOL_LOGO=https://i.supaimg.com/5838a1ce-b184-48bc-b370-5250b7e25a58.png
ESTABLISHED_YEAR=1970
HEAD_TEACHER_NAME=Head Teacher

# ============ THEME COLORS ============
# Default theme colors (can be changed in admin panel)
THEME_COLOR=#00d4ff
SECONDARY_COLOR=#ff00ea
ACCENT_COLOR=#00ff88

# ============ SYSTEM OPTIONS ============
# Features toggle
ENABLE_SMS=True
ENABLE_PDF_GENERATION=True
ENABLE_BACKUP=True
ENABLE_ACTIVITY_LOGGING=True

# SMS rate limiting
SMS_RATE_LIMIT=60  # SMS per minute
SMS_MAX_CONCURRENT=5

# ============ ADVANCED CONFIGURATION ============
# Database connection pool
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_POOL_RECYCLE=3600

# Logging level
LOG_LEVEL=INFO

# Admin email (for system notifications)
ADMIN_EMAIL=admin@dewra.edu.bd

# ============ INTEGRATION KEYS (Optional) ============
# Google Maps API (for address mapping)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Dropbox API (for cloud backup)
# DROPBOX_ACCESS_TOKEN=your-dropbox-access-token
# DROPBOX_REFRESH_TOKEN=your-dropbox-refresh-token
# DROPBOX_FOLDER_PATH=/attendance

# ============ DEVELOPMENT SETTINGS ============
# Only use in development/testing
# FLASK_DEBUG=True
# FLASK_ENV=development
# DATABASE_URL=sqlite:///instance/dev_database.db

